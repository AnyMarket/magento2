<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<route method="POST" url="/V1/anymarket/order">
		<service class="Anymarket\Anymarket\Api\OrderManagementInterface" method="postOrder"/>
		<resources>
			<resource ref="self"/>
		</resources>
	</route>
	<route method="GET" url="/V1/anymarket/products/getConfig/:idProduct">
		<service class="Anymarket\Anymarket\Api\ProductManagementInterface" method="getConfigurableBySimple"/>
		<resources>
			<resource ref="self"/>
		</resources>
	</route>
</routes>
